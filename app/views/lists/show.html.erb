<div id="typography" class="container mb-5">
    <div class="section-title col-lg-8 col-md-10 ml-auto mr-auto">
        <h2 style="text-align:center; margin:100px 0px 20px 0px;">Show Task</h2>
        <div class="text-center">
            <table class="table table-striped table-responsive-md">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td style="text-align:center;"><%= @list.title %></td>
                        <td style="text-align:center;"><%= @list.description %></td>
                    </tr>
                </tbody>
            </table>
            
            <%= link_to 'Back', lists_path , class: "btn btn-primary"%> <%= link_to 'Edit', edit_list_path(@list), class: "btn btn-secondary" %> <%= link_to 'Delete', list_path(@list), class: "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %>
        </div>
    </div>
</div>