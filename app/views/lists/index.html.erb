<div id="typography" class="container mb-5">
    <div class="section-title col-lg-8 col-md-10 ml-auto mr-auto">
        <div class="example col-md-10 ml-auto mr-auto">
            <h1 style="text-align:center; margin:100px 0px 20px 0px;">To Do List</h1>

            <table class="table table-striped table-responsive-md">
                <thead class="thead-dark">
                    <tr>
                        <th colspan='1' style="text-align:center;">Title</th>
                        <th colspan='2' style="text-align:center;">Actions</th>
                        <th colspan='1' style="text-align:center;">Status</th>
                    </tr>
                </thead>
                <tbody>
                
                    <% @lists.each do |list| %>
                    
                        <% if list.status == true %>
                            
                            <tr>
                                <td style="text-align:center;"><%= link_to list.title.truncate(23), list_path(list) %></td>
                                <td style="text-align:center;"><%= link_to 'Edit', edit_list_path(list), class: "badge badge-secondary" %></td>
                                <td style="text-align:center;"><%= link_to 'Delete', list_path(list), class: "badge badge-danger ", method: :delete, data: { confirm: 'Are you sure?'} %></td>
                                <td style="text-align:center;"><%= link_to 'Complete', list_statuses_stat_path(list_id: list.id), class: "badge badge-success "%></td>
                            </tr>
                        <% end %>
                    <% end %>
                </tbody>
            </table>
            <p style="text-align:center; margin-top:100px" >
                <%= link_to 'New Task', new_list_path, class: "btn btn-primary" %>
            </p>
        </div>
    </div>
</div>